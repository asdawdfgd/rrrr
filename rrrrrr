version: "3.8"
services:
  windows:
    image: dockurr/windows
    container_name: windows
    environment:
      VERSION: "10"
      # هنا بنديله قوة الخطة البرو
      RAM_SIZE: "8G"
      CPU_CORES: "4"
      DISK_SIZE: "64G"
      # اليوزر والباسورد
      USERNAME: "TOOLBOXLAP"
      PASSWORD: "admin@123"
      ACCEPT_EULA: "Y"
    ports:
      - 8006:8006
      - 3389:3389
    # شيلنا الـ devices عشان Railway مش بيدعمها
    # شيلنا الـ Volumes المؤقتة عشان متعملش مشاكل Permissions
    restart: always
